extends layout

block content  
	h1 Here are my trips
	if (!user)
		a(href="/login") Login
		br
		a(href="/register") Register
	if (user)
		table
			tr
				each trip in trips
					td
						a(href="/trips/#{trip.id}") 
							br
							#{trip}

	script(src='http://code.jquery.com/jquery.js')
	script(src='js/bootstrap.min.js')
